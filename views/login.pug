extends layout

block content

  h1= title

  form(method='POST' action='')
    div.form-group
      label(form='username') Username:
      input#text.form-control(type='text', name='username', required='true', value=(undefined===user ? '' : user.username))

      label(form='password') Password:
      input#text.form-control(type='password', name='password', require='true', value=(undefined===user ? '' : user.username))

    button.btn.btn-primary(type='submit') Log me in!
