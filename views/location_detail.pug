extends layout

block content
  h1= title

  hr

  if posts
    for post in posts
      h4
        a(href="/home/post/" + post.postid) Post by @#{post.username} from #{post.city}, #{post.country}
      p #{post.post_date}
      if (post.image_link)
        img(src=post.image_link, width=500)
      if (post.text)
        p #{post.text}
  else
    p There aren't any posts at this location.
